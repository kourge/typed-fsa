{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noLib": false,
    "outDir": "dist/",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "files": [
    "./src/index.ts"
  ],
  "filesGlob": [
    "./typings/index.d.ts",
    "./src/index.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "!./dist/**",
    "!./node_modules/**",
    "!./custom-typings/**"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
